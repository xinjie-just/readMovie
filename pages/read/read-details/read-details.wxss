.read-details-container {
  padding-right: 2%;
  padding-left: 2%;
  padding-bottom: 20rpx;
}

.big-img {
  display: block;
  width: 750rpx;
  height: 400rpx;
  margin-left: -2%;
  margin-right: -2%;
}
.article-heading {
  font-size: 28rpx;
  margin-top: 1.2em;
  display: flex;
  align-items: center;  
  color: #999;
}
.article-heading .head-portraits {
  font-size: inherit;
  display: block;
  width: 2em;
  height: 2em;
  border-radius: 50%;
  margin-right: 1em;
}
.article-heading .nick-name {
  font-size: inherit;
  margin-right: 1em;
  font-weight: 500;
}
.article-heading .pubtime {
  font-size: 26rpx;
}
.article-heading .pubtime .time {
  font-size: 26rpx;
  margin-left: .6em;
}

.article-title {
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
  color: #333;
  font-weight: 600;
  margin-top: 1em;
  margin-bottom: 1em;
}
.star-msg {
  display: block;
  z-index: 1;
  font-size: inherit;
  position: relative;
  width: 100%;
  height: 1.5em;
  line-height: 1.5em;
}
.star-msg::before {
  z-index: 2;
  content: "";
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  height: 1px;
  background-color: #dadada;
}
.star-msg image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 3;
  font-size: inherit;
  width: 1.5em;
  height: 1.5em;
  border-radius: 50%;
  padding: .2em;
  box-sizing: border-box;
  color: #fff;
}
.star-msg .star {
  background-color: #019fe8;
  right: 2em;
}
.star-msg .msg {
  background-color: #4eb1b5;
  right: 0;
}

.article-content {
  color: #999;
  display: block;
  margin-top: 1.5em;
  font-size: 28rpx;
  line-height: 1.8;
  letter-spacing: .1em;
}