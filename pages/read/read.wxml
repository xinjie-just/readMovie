<import src="read-item-template/read-item-template.wxml" />

<view class="container">
  <swiper indicator-dots="true" autoplay="true" interval="5000" indicator-color="#fff"
  indicator-active-color="#019fe8" class="carousel">
    <swiper-item>
      <image src="/assets/images/carousel1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/assets/images/carousel2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/assets/images/carousel3.jpg"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{data}}" wx:for-index="readDataIndex" wx:for-item="readDataItem">
    <view class="read-item-container" catchtap="view" data-readId="{{readDataItem.readId}}">
      <template is="readItem" data="{{...readDataItem}}" />
    </view>
  </block>
</view>