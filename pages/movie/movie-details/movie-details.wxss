@import "../star/star-template.wxss";

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.head-img-container {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding: 50rpx 225rpx 0 40rpx;
  box-sizing: border-box;
  background-color:rgba(128,128,128,.4);
}

.main-title {
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 36rpx;
  line-height: 1.5;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-bottom: 30rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 30rpx;
}

.audience-response > text {
  color: #fff;
  font-size: 22rpx;
}

.audience-response > text:not(:last-of-type) {
  margin-right: 30rpx;
  display: inline-block;
}

.audience-response > text .count {
  color: #f21146;
  margin-right: 10rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  bottom: -40rpx;
  right: 30rpx;
}

.summary {
  padding: 60rpx 40rpx 40rpx;
  color: #777;
  border-bottom: 1px solid #d9d9d9;
}

.original-title {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
}

.summary-item {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  line-height: 1.5;
}

.summary-item .stars-container,
.summary-item .content {
  flex: 1;
}

.summary-item:not(:last-of-type) {
  margin-bottom: 16rpx;
}

.summary-item .summary-cast-name {
  position: relative;
  font-size: 28rpx;
}

.summary-item .summary-cast-name:not(:last-of-type) {
  margin-right: 24px;
}

.summary-item .summary-cast-name:not(:last-of-type)::before {
  position: absolute;
  content: "/";
  right: -14px;
}

.mark {
  font-size: 28rpx;
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.synopsis {
  padding: 40rpx;
  color: #777;
  border-bottom: 1px solid #d9d9d9;
}

.synopsis-heading {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 0.8em;
}

.summary-content {
  color: #999;
  font-size: 28rpx;
  line-height: 1.7;
}

.cast {
  padding: 40rpx;
  color: #777;
}

.cast-heading {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 0.8em;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-container:not(:last-of-type) {
  margin-right: 40rpx;
}

.cast-imgs {
  white-space: nowrap;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
  font-size: 28rpx;
}
